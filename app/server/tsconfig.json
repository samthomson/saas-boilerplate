{
  "compilerOptions": {
    "target": "ESNext",                                  
    "module": "commonjs",    
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "baseUrl": ".",
  },
  "include": ["src", "../shared/**/*"]
}
