		"prettier": "^3.5.3"
	},
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"migrate-dev": "read -p 'Migration name: ' name; npx prisma migrate dev --name \"${name}_$(date +%Y%m%d%H%M%S)\"",
		"build": "rm -rf dist && tsc",
		"build-ci": "rm -rf dist &&  tsc",
		"start": "node dist/server/src/index.js",
		"migrate-prod": "npx prisma migrate deploy",
		"prod-start": "yarn build && yarn run migrate-prod && yarn start",
		"render-start": "yarn run migrate-prod && yarn start",
		"dokploy-start": "yarn run migrate-prod && yarn start",
		"seed:admin": "ts-node src/scripts/seedAdmin.ts",
		"seed:dev": "ts-node src/scripts/seedDev.ts",
		"db:wipe": "ts-node src/scripts/wipeDb.ts",
		"screenshot": "ts-node src/scripts/takeScreenshots.ts",
		"lint": "eslint . --ext .ts --fix",
		"test": "jest",
		"test-specific": "jest  -t 'Stripe Webhooks'",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test-start-server": "yarn && yarn run migrate-dev && yarn run dev"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testMatch": [
			"**/__tests__/**/*.ts"
		]
	}
}
